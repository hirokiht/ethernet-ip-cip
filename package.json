{
    "name": "ethernet-ip-cip",
    "version": "0.1.0",
    "description": "A simple node.js Ethernet/IP API focused on CIP implementation",
    "main": "./src/index.js",
    "scripts": {
        "test": "npm run lint && jest && npm run test:coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
        "test:local": "npm run lint && jest && npm run test:coverage",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:detailed": "jest --verbose",
        "test:update": "jest -u",
        "lint": "./node_modules/.bin/eslint . --ext .js",
        "lint:fix": "npm run lint -- --fix"
    },
    "keywords": [
        "ethernet",
        "ethernet-ip",
        "ethernet/ip",
        "CIP",
        "industrial",
        "PLC",
        "communication",
        "controller",
        "adapter",
        "scanner"
    ],
    "dependencies": {
        "dateformat": "^3.0.3",
        "task-easy": "^0.2.0"
    },
    "devDependencies": {
        "colors": "^1.3.0",
        "coveralls": "^3.0.1",
        "eslint": "^4.18.2",
        "eslint-plugin-jest": "^21.17.0",
        "jest": "^23.2.0"
    },
    "author": "Hiroki Takeuchi",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/hirokiht/node-ethernet-ip"
    }
}
